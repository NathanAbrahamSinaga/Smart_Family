{
  "version": 2,
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "routes": [
    { "src": "/(.*).php", "dest": "/api/$1.php" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/server/(.*).php", "dest": "/api/server/$1.php" },
    { "src": "/src/(.*).php", "dest": "/api/src/$1.php" },
    { "src": "/uploads/(.*).php", "dest": "/api/uploads/$1.php" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ],
  "env": {
    "DB_HOST": "@db_host",
    "DB_USER": "@db_user",
    "DB_PASS": "@db_pass",
    "DB_NAME": "@db_name",
    "BASE_URL": "@base_url"
  },
  "build": {
    "env": {
      "PHP_VERSION": "8.2"
    }
  }
}
{
    "version": 2,
    "builds": [
      {
        "src": "server/**/*.php",
        "use": "@vercel/php"
      },
      {
        "src": "src/**/*.php",
        "use": "@vercel/php"
      },
      {
        "src": "index.php",
        "use": "@vercel/php"
      },
      {
        "src": "assets/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/index.php"
      }
    ]
  }